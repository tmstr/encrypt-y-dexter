<div class="container">
  <div class="row">
    <div class="col-lg-2.col-lg-offset-2">
      <h1>Encrypted EX</h1>

      <%= form_tag create_encrypted_message_path, method: :post do %>
          <p>
        <%= label_tag :email, "Email or Alias", placeholder: 'Email or alias here...' %>
        <%= text_field_tag :email %>
          </p>
          <p>
        <%= label_tag :msg %>
        <%= text_field_tag :msg %>
          </p>
          <p>
        <%= label_tag :pass_phrase %>
        <%= password_field_tag :pass_phrase %>
          </p>

        <p>
          <%= submit_tag 'Send Msg' %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3>
      <strong>
        <%= flash[:notice] %>
      </strong>
    </h3>
  </div>

  <div class="row">
    <div class="col-lg-2.col-lg-offset-2">
      <%= form_tag lookup_encrypted_message_path, method: :post, class: 'form-horizontal' do %>
        <div class="form-group">
          <p>
            <%= label_tag :msg_email %>
            <%= text_field_tag :msg_email %>
          </p>
          <p>
            <%= label_tag :pass_phrase %>
            <%= password_field_tag :pass_phrase %>
          </p>

          <p>
            <%= submit_tag 'decrypte' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
